{
  "name": "backend",
  "description": "A simple and convenient way to distribute and provide content to your apps ;)",
  "version": "1.0.0",
  "license": "MIT",
  "author": {
    "email": "eugen.hildt@litlbyte.com",
    "name": "Eugen Hildt"
  },
  "bugs": {
    "email": "eugen.hildt@litlbyte.com"
  },
  "scripts": {
    "build": "nest build --path ./tsconfig.build.json",
    "build:prod": "nest build --path ./tsconfig.build.prod.json",
    "depcheck": "npx depcheck .",
    "depcruiser": "npx depcruise -c .depcruiser.cjs --ts-config tsconfig.json src",
    "depcruiser:graph": "npx depcruise -c .depcruiser.cjs -x \".+.spec.ts\" -T dot ./src | dot -T png > .depcruiser-graph.png",
    "format": "prettier --write .",
    "lint": "eslint .",
    "lint-staged": "npx lint-staged --allow-empty",
    "ncu:update": "npx npm-check-updates --doctor -u",
    "ncu:validate": "npx npm-check-updates -e 2 --packageFile=./package.json",
    "prebuild": "rimraf dist",
    "start": "nest start",
    "start:debug": "nest start --debug --watch  --preserveWatchOutput",
    "start:dev": "dotenv -e ./env/.env -- nest start --watch  --preserveWatchOutput",
    "start:node": "node dist/main",
    "test": "jest --passWithNoTests",
    "test:clearCache": "jest --clearCache",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "dotenv -e ./env/.env.e2e -- jest --detectOpenHandles --config ./test/jest-e2e.json",
    "test:watch": "jest --watch",
    "ts-unused-exports": "npx ts-unused-exports ./tsconfig.build.json"
  },
  "dependencies": {
    "@fastify/static": "^6.12.0",
    "@nestjs/bullmq": "^10.0.1",
    "@nestjs/cache-manager": "^2.1.1",
    "@nestjs/common": "^10.2.8",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.2.8",
    "@nestjs/microservices": "^10.2.8",
    "@nestjs/mongoose": "^10.0.2",
    "@nestjs/platform-fastify": "^10.2.8",
    "@nestjs/swagger": "^7.1.16",
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "bullmq": "^4.13.3",
    "cache-manager": "^5.3.0",
    "cache-manager-ioredis": "^2.1.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "joi": "^17.11.0",
    "js-yaml": "^4.1.0",
    "mongoose": "^8.0.1",
    "mqtt": "^5.2.2",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "short-unique-id": "^5.0.3"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.2.1",
    "@nestjs/schematics": "^10.0.3",
    "@nestjs/testing": "^10.2.8",
    "@types/cache-manager": "^4.0.5",
    "@types/cache-manager-ioredis": "^2.0.6",
    "@types/eslint": "^8.44.7",
    "@types/jest": "^29.5.8",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.9.1",
    "@types/prettier": "^2.7.3",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "depcheck": "^1.4.7",
    "dependency-cruiser": "^15.3.0",
    "dotenv-cli": "^7.3.0",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-no-loops": "^0.3.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-sonarjs": "^0.23.0",
    "jest": "^29.7.0",
    "jest-extended": "^4.0.2",
    "jest-junit": "^16.0.0",
    "lint-staged": "^15.1.0",
    "npm-check-updates": "^16.14.6",
    "prettier": "^3.1.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.1",
    "ts-unused-exports": "^10.0.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2"
  }
}