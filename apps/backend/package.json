{
  "name": "@acap/backend",
  "description": "A simple and convenient way to distribute and provide content to your apps ;)",
  "version": "1.0.0",
  "license": "MIT",
  "author": {
    "email": "eugen.hildt@litlbyte.com",
    "name": "Eugen Hildt"
  },
  "bugs": {
    "email": "eugen.hildt@litlbyte.com"
  },
  "scripts": {
    "build": "nest build --path ./tsconfig.build.json",
    "build:prod": "nest build --path ./tsconfig.build.prod.json",
    "depcheck": "npx depcheck .",
    "depcruiser": "npx depcruise -c .depcruiser.mjs --ts-config tsconfig.json src",
    "format": "prettier --write .",
    "lint": "eslint ./src",
    "lint-staged": "npx lint-staged --allow-empty",
    "ncu:update": "npx npm-check-updates --doctor -u",
    "ncu:validate": "npx npm-check-updates -e 2 --packageFile=./package.json",
    "prebuild": "rimraf dist",
    "start": "nest start",
    "start:debug": "nest start --debug --watch  --preserveWatchOutput",
    "start:dev": "dotenv -e ./env/.env -- nest start --watch  --preserveWatchOutput",
    "start:node": "node dist/main",
    "test": "jest --passWithNoTests",
    "test:clearCache": "jest --clearCache",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "dotenv -e ./env/.env.e2e -- jest --detectOpenHandles --config ./test/jest-e2e.json",
    "test:watch": "jest --watch",
    "ts-unused-exports": "npx ts-unused-exports ./tsconfig.exclude.json --maxIssues=20"
  },
  "dependencies": {
    "@fastify/static": "^7.0.4",
    "@nestjs/bullmq": "^10.1.1",
    "@nestjs/cache-manager": "^2.2.2",
    "@nestjs/common": "^10.3.8",
    "@nestjs/config": "^3.2.2",
    "@nestjs/core": "^10.3.8",
    "@nestjs/microservices": "^10.3.8",
    "@nestjs/mongoose": "^10.0.6",
    "@nestjs/platform-fastify": "^10.3.8",
    "@nestjs/swagger": "^7.3.1",
    "ajv": "^8.13.0",
    "ajv-formats": "^3.0.1",
    "bullmq": "^5.7.5",
    "cache-manager": "^5.5.1",
    "cache-manager-ioredis": "^2.1.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "joi": "^17.13.1",
    "js-yaml": "^4.1.0",
    "mongoose": "^8.3.2",
    "mqtt": "^5.5.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "short-unique-id": "^5.2.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.3.2",
    "@nestjs/schematics": "^10.1.1",
    "@nestjs/testing": "^10.3.8",
    "@types/cache-manager": "^4.0.6",
    "@types/cache-manager-ioredis": "^2.0.6",
    "@types/eslint": "^8.56.10",
    "@types/jest": "^29.5.12",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.12.11",
    "@types/prettier": "^2.7.3",
    "@types/supertest": "^6.0.2",
    "depcheck": "^1.4.7",
    "dependency-cruiser": "^16.3.2",
    "dotenv-cli": "^7.4.2",
    "eslint": "^9.2.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-simple-import-sort": "^12.1.0",
    "eslint-plugin-sonarjs": "^1.0.3",
    "globals": "^15.2.0",
    "jest": "^29.7.0",
    "jest-extended": "^4.0.2",
    "jest-junit": "^16.0.0",
    "lint-staged": "^15.2.2",
    "npm-check-updates": "^16.14.20",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.6",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.2",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "ts-unused-exports": "^10.0.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.5"
  }
}
