{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist",
    "target": "ESNext",
    "module": "commonjs",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "files": ["shims.d.ts"],
  "include": ["eslint.config.mjs", ".prettierrc.mjs", ".releaserc.js", "jest.config.ts", "src/**/*", "test/**/*"]
}
