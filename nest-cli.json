  "collection": "@nestjs/schematics",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "watchAssets": true,
        "include": "./configs/config-yml/*.yml",
        "outDir": "./dist"
      }
    ]
  },
  "sourceRoot": "./src"
}